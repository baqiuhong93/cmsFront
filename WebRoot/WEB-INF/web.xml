	</servlet-mapping>
	  -->
	<servlet>
		<servlet-name>freemarkerServlet</servlet-name>
		<servlet-class>com.weimini.core.servlet.FreemarkerServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
